# Database
POSTGRES_USER=noctoclick
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=noctoclick
DATABASE_URL=postgresql://noctoclick:your_secure_password_here@postgres:5432/noctoclick

# Redis
REDIS_URL=redis://redis:6379

# API
NODE_ENV=production
PORT=3001
JWT_SECRET=your_jwt_secret_here_min_32_chars
API_RATE_LIMIT=100

# Yandex Direct API
YANDEX_CLIENT_ID=your_yandex_app_id
YANDEX_CLIENT_SECRET=your_yandex_app_secret
YANDEX_REDIRECT_URI=http://noctoclick.local/api/yandex/callback

# Dashboard
VITE_API_URL=http://noctoclick.local/api

# Logging
LOG_LEVEL=info

# Sync intervals (minutes)
FRAUD_SYNC_INTERVAL=60
CLEANUP_INTERVAL=1440

# Fraud detection thresholds
MAX_CLICKS_PER_HOUR=5
MIN_TIME_ON_SITE=3
FRAUD_SCORE_THRESHOLD=70