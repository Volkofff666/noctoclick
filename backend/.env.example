# Database Type (sqlite или postgres)
DB_TYPE=sqlite

# PostgreSQL Settings (только для production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=noctoclick
DB_USER=noctoclick_user
DB_PASSWORD=your_password

# JWT Settings
JWT_SECRET=your_super_secret_key_here_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_key_here_also_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Settings
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Fraud Detection Settings
FRAUD_MAX_CLICKS_PER_HOUR=10
FRAUD_MIN_TIME_ON_SITE=3
FRAUD_SCORE_THRESHOLD=70
FRAUD_AUTO_BLOCK_ENABLED=true

# Yandex.Direct API (опционально)
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_REDIRECT_URI=http://localhost:3001/api/yandex/callback